/**app.wxss**/
page{
  font-size: 28rpx;
  background: #f5f5f5;
}
.border{
  border:1px solid rgba(204, 204, 204, 1);
  box-shadow:0px 19rpx 8rpx 0px rgba(80,80,80,0.04);
  border-radius:10rpx;
}

.iscover{
  height: 100%;
  overflow: hidden;
}

.cover{
  height: 100%;
  width: 100%;
  background: rgba(0,0,0,0.4);
  position: absolute;
  top:0;
  left: 0;
}
.cover_bottom{
  background: #fff;
  width: 100%;
  position: absolute;
  bottom: 0;
  border-radius: 4rpx;  
  line-height: 90rpx;
  text-align: center;
  font-size: 34rpx;
  color: #333;
  z-index: 2;
}
.line{
  border-bottom: 1rpx solid #ccc;
}
.flex{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.flex1{
  display: flex;
  justify-content: space-around;
  align-items: center; 
}
.manger{
  margin-top: 20rpx;
}
